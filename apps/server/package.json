{
  "name": "@webtex/server",
  "version": "1.0.0",
  "main": "dist/index.js",
  "keywords": [],
  "license": "ISC",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,ts,html,css"
  },
  "scripts": {
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "cpstatic": "cp -R './src/public/' './dist/public/'",
    "devbuild": "pnpm run clean && npx tsc && pnpm run cpstatic",
    "prodbuild": "pnpm run clean && node compile && pnpm run cpstatic",
    "dev": "nodemon --quiet --exec \"pnpm run prodbuild && pnpm run start\""
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "concurrently": "^7.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "kysely": "^0.22.0",
    "nodemailer": "^6.8.0",
    "pg": "^8.8.0",
    "redis": "^4.5.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.14",
    "@types/nodemailer": "^6.4.6",
    "@types/pg": "^8.6.5",
    "@types/uuid": "^9.0.0",
    "date-fns": "^2.29.3",
    "esbuild": "^0.16.6",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "npm-dts": "^1.3.12",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  }
}

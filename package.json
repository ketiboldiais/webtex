{
  "name": "@webtex/root",
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "structs/*",
    "utils/*"
  ],
  "tsup": {
    "dts": true,
    "splitting": true,
    "clean": true,
    "format": [
      "esm"
    ],
    "minify": true,
    "bundle": true,
    "entryPoints": [
      "src/index.ts"
    ],
    "target": "es2020",
    "outDir": "dist"
  },
  "skipNodeModulesBundle": true,
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "license": "ISC",
  "devDependencies": {
    "tsup": "^6.5.0",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4",
    "vitest": "^0.25.8"
  },
  "packageManager": "pnpm@7.15.0"
}
